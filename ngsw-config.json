{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.csr.html",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": ["/**/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"]
      }
    },
    {
      "name": "fonts",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": ["/**/*.(woff|woff2|ttf|otf|eot)"]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "midi-patterns-api",
      "urls": ["/api/patterns/**"],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "1d",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "midi-settings-api",
      "urls": ["/api/settings/**"],
      "cacheConfig": {
        "maxSize": 20,
        "maxAge": "1h",
        "timeout": "5s",
        "strategy": "freshness"
      }
    },
    {
      "name": "midi-sync-api",
      "urls": ["/api/sync/**"],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "30m",
        "timeout": "15s",
        "strategy": "performance"
      }
    },
    {
      "name": "external-resources",
      "urls": [
        "https://fonts.googleapis.com/**",
        "https://fonts.gstatic.com/**",
        "https://cdn.jsdelivr.net/**"
      ],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "7d",
        "timeout": "10s",
        "strategy": "performance"
      }
    }
  ],
  "navigationUrls": ["/**", "!/**/*.*", "!/**/*__*", "!/**/*__*/**"]
}
